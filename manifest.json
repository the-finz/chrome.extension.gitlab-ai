{
  "manifest_version": 3,
  "name": "Gitlab AI",
  "version": "1.0",
  "description": "A Chrome extension that integrates with GitLab to provide AI-powered code suggestions and improvements.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/main.png"
  },
  "permissions": ["scripting", "tabs"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
